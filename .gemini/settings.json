{
  "$schema": "https://raw.githubusercontent.com/google-gemini/gemini-cli/main/schemas/settings.schema.json",
  "model": {
    "name": "gemini-3-pro-preview"
  },
  "tools": {
    "autoAccept": true,
    "shell": {
      "enableInteractiveShell": true,
      "showColor": true,
      "inactivityTimeout": 300
    },
    "useRipgrep": true,
    "useSmartEdit": true,
    "writeTodos": true,
    "outputTruncation": {
      "maxCharacters": 4000000,
      "maxLines": 2000
    }
  },
  "ui": {
    "hideBanner": true,
    "hideTips": true
  }
}
